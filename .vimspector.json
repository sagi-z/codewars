{
  "$schema": "https://puremourning.github.io/vimspector/schema/vimspector.schema.json",
  "adapters": {
    "run_with_debugpy": {
      "command": [ "${workspaceRoot}/run_with_debugpy" ],
      "port": 9876,
      "env": {
        "DEBUG_PORT": "9876"
      }
    },
    "python-remote-docker": {
      "variables": {
        "port": "8765"
      },
      "port": "${port}",
      "launch": {
        "remote": {
          "container": "${ContainerID}",
          "runCommand": [
            "python3", "-m", "debugpy", "--listen", "0.0.0.0:${port}",
                                        "--wait-for-client",
                                        "%CMD%"
          ]
        },
        "delay": "5000m"
      }
    }
  },
  "configurations": {
    "attach-run": {
      "adapter": "run_with_debugpy",
      "configuration": {
        "request": "attach"
      },
      "breakpoints": {
        "exception": {
          "raised": "N",
          "uncaught": "",
          "userUnhandled": ""
        }
      }
    },
    "docker-attach": {
      "adapter": "python-remote-docker",
      "remote-cmdLine": [ "/root/main.py" ],
      "remote-request": "launch",
      "configuration": {
        "request": "attach",
        "pathMappings": [
          {
            "localRoot": "${workspaceRoot}",
            "remoteRoot": "/root"
          }
        ]
      }
    },
    "run": {
      "adapter": "debugpy",
      "variables": {
	"python": "${VIRTUAL_ENV}/bin/python"
      },
      "configuration": {
        "request": "launch",
        "type": "python",
        "cwd": "${workspaceRoot}",
        "python": "${python}",
        "program": "${file}",
        "stopOnEntry": true,
        "console": "integratedTerminal"
      },
      "breakpoints": {
        "exception": {
          "raised": "N",
          "uncaught": "",
          "userUnhandled": ""
        }
      }
    },
    "run - make_env": {
      "adapter": "debugpy",
      "variables": {
        "MAKE_ENV_OUTPUT": {
          "shell": "${workspaceRoot}/make_env.sh"
        },
	"python": "${VIRTUAL_ENV}/bin/python"
      },
      "configuration": {
        "request": "launch",
        "type": "python",
        "python": "${python}",
        "cwd": "${workspaceRoot}",
        "program": "${program:${file\\}}",
        "stopOnEntry#json": "${StopOnEntry:true}",
        "console": "integratedTerminal",
        "args#json": "${args:[]}",
        "igored#json#s": "string not json",
        "env#json": "${MAKE_ENV_OUTPUT}"
      },
      "breakpoints": {
        "exception": {
          "raised": "N",
          "uncaught": "",
          "userUnhandled": ""
        }
      }
    }
  }
}
